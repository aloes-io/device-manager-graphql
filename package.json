{
  "name": "device-manager-graphql",
  "version": "1.0.0",
  "description": "GraphQL wrapper for device-manager",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=10.0"
  },
  "scripts": {
    "build": "npm run clean && lb-tsc",
    "build:watch": "lb-tsc --watch",
    "build:docker": "docker build -t getlarge/aloes-graphql-api:latest .",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register .",
    "start:docker": "docker run -p 3000:3000 -d getlarge/aloes-graphql-api",
    "stop:docker": "docker stop getlarge/aloes-graphql-api",
    "publish:docker": "docker push getlarge/aloes-graphql-api:latest",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^3.3.0",
    "@loopback/authorization": "^0.5.0",
    "@loopback/boot": "^2.0.0",
    "@loopback/context": "^3.0.0",
    "@loopback/core": "^2.0.0",
    "@loopback/openapi-v3": "^3.0.0",
    "@loopback/repository": "^2.0.0",
    "@loopback/rest": "^3.0.0",
    "@loopback/rest-explorer": "^2.0.0",
    "@loopback/service-proxy": "^2.0.0",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "eventemitter2": "^6.0.0",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "lodash.merge": "^4.6.2",
    "loopback-api-component": "^1.0.0",
    "loopback-callback-component": "^0.2.1",
    "loopback-connector-rest": "^3.6.0",
    "loopback-pubsub-component": "^0.2.1",
    "mqtt": "^3.0.0",
    "oma-json": "^1.1.1",
    "openapi-to-graphql": "^2.1.0",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "devDependencies": {
    "@loopback/build": "^4.0.0",
    "@loopback/eslint-config": "^6.0.0",
    "@loopback/testlab": "^2.0.0",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^1.17.1",
    "source-map-support": "^0.5.16",
    "typescript": "~3.8.3"
  },
  "eslintConfig": {
    "extends": [
      "@loopback/eslint-config",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ]
  },
  "eslintIgnore": [
    "/dist/",
    "/coverage/",
    "/node_modules/"
  ],
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "jsxBracketSameLine": true,
    "trailingComma": "all"
  },
  "prettierIgnore": [
    "/dist/",
    "/node_modules/"
  ],
  "mocha": {
    "check-leaks": true,
    "recursive": true,
    "require": "source-map-support/register"
  }
}
